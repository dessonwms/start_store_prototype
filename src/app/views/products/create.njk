{% extends "layout.njk" %}

{% block content %}
    
    <section class="container form">
        <form class="card" method="POST" action="/products" enctype="multipart/form-data">

            <dic class="header">
                <h3>Cadastrar Produto {{ productId }}</h3>
            </dic>
            
            <div class="fields">
                {% include 'products/fields.njk' %}
            </div>

            <button class="button" type="submit">Salvar</button>

        </form>
    </section>

{% endblock content %}